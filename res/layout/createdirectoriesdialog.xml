<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvDirectoriesExplanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Directories Needed"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvDirectoriesList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Directories List" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bCreateDirectories"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Directories &amp; Download Assets" />

            <Button
                android:id="@+id/bDoNotCreateDirectories"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel and Quit" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>