<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlTouchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true" >

    <include
        android:id="@+id/iCL"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/characterlist" />

    <include
        android:id="@+id/iCG"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iCL"
        layout="@layout/charactergen" />

    <include
        android:id="@+id/iRCE"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iCG"
        layout="@layout/recordcardedit" />

    <include layout="@layout/debugconsole" />

</RelativeLayout>