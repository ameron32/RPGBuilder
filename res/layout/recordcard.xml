<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6" >

        <Button
            android:id="@+id/bEditRecord"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Edit Record" />

        <Button
            android:id="@+id/bAddNote"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Add Note" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost " />

                <TextView
                    android:id="@+id/tvCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:textColor="#800000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ToggleButton
                    android:id="@+id/tbGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender " />

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:textColor="#800000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ToggleButton
                    android:id="@+id/tbName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name " />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:textColor="#800000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ToggleButton
                    android:id="@+id/tbClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class " />

                <TextView
                    android:id="@+id/tvClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:textColor="#800000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvST"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="___"
                        android:textColor="#800000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="___"
                        android:textColor="#800000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvIQ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="___"
                        android:textColor="#800000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvHT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="___"
                        android:textColor="#800000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ST"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" DX"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" IQ"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" HT"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="HP " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="  Thrust " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Swing " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="FP " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvHP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="___"
                        android:textColor="#800000" />

                    <TextView
                        android:id="@+id/tvThrust"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="___"
                        android:textColor="#800000" />

                    <TextView
                        android:id="@+id/tvSwing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="___"
                        android:textColor="#800000" />

                    <TextView
                        android:id="@+id/tvFP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="___"
                        android:textColor="#800000" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Will " />

                <TextView
                    android:id="@+id/tvWill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:textColor="#800000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Per " />

                <TextView
                    android:id="@+id/tvPer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:textColor="#800000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Speed " />

                <TextView
                    android:id="@+id/tvBS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:textColor="#800000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Move " />

                <TextView
                    android:id="@+id/tvMove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:textColor="#800000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encumbrance " />

                <TextView
                    android:id="@+id/tvEncumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:textColor="#800000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dodge " />

                <TextView
                    android:id="@+id/tvDodge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:textColor="#800000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Parry " />

                <TextView
                    android:id="@+id/tvParry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:textColor="#800000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Block " />

                <TextView
                    android:id="@+id/tvBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:textColor="#800000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shield DB " />

                <TextView
                    android:id="@+id/tvShieldDB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:textColor="#800000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Size Modifier " />

                <TextView
                    android:id="@+id/tvSM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:textColor="#800000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAllFeatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes" />

                <TextView
                    android:id="@+id/tvAllNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Features" />

                <TextView
                    android:id="@+id/tvAllFeatures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#800000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAllAdv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvAllAdv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advantages/Disadvantages" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>